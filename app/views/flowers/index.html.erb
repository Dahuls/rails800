<div class="flowers-page">
  <h1>My Garden ðŸŒ¸</h1>

  <% flash.each do |type, message| %>
    <div class="flash flash-<%= type %>">
      <%= message %>
    </div>
  <% end %>

  <%= button_to "Sprout Random Flower! ðŸŒ¸", flowers_path, method: :post, class: "sprout-button" %>

  <table class="flowers-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Color</th>
        <th>Number of Petals</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% @flowers.each do |flower| %>
        <tr>
          <td>#<%= flower.id %></td>
          <td>
            <span class="color-dot" style="background-color: <%= flower.color.downcase %>;"></span>
            <%= flower.color %>
          </td>
          <td><%= flower.number_of_petals %></td>
          <td><%= flower.created_at.strftime("%B %d, %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 